.notification
  .notice  メッセージ送信成功
.wrapper
  =render 'shared/side_bar'
.chat-main
  .chat-main__header
    .chat-main__header--group.clearfix
      .chat-main__header--group-name d
      %a.chat-main__header--group-edit-btn{href: "/"} edit
    .chat-main__header-members MENBER: hanako
  .chat-main__body
    .chat-main__body--messages-list
      .chat-main__message.clearfix
        .chat-main__message-name hanako
        .chat-main__message-time 2019/02/05 11:11:11
        .chat-main__message-body text
  .chat-main__footer
    %form#new_message.chat-main__footer-form
      %input.message#message_body{placeholder: "type a message", type: "text", name: "message[body]"}
      %label.fa.fa-image{for: "message_image"}
        %input.image#message_image{type: "file", name: "message[image]"}
      %input.submit{type: "submit", name: "commit", value: "Send"}
